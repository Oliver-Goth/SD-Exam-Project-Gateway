{
  "uid": "business-kpis",
  "title": "Business KPIs",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",

  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Orders Created",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(orders_created_total)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Orders Confirmed",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(orders_confirmed_total)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Order Failure Rate (%)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(orders_failed_total[5m])) / sum(rate(orders_created_total[5m])) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Order Processing Time (p95)",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(order_processing_seconds_bucket[5m])))",
          "refId": "A"
        }
      ]
    }
  ]
}
